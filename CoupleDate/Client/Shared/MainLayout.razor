@inherits LayoutComponentBase

<MudThemeProvider Theme="@MyCustomTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Bottom="true" Class="d-flex flex-row justify-content-evenly">
        <MudIconButton Icon="@Icons.Material.Filled.Delete" aria-label="delete" Style="color: var(--french-gray);"></MudIconButton>
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" aria-label="github" Style="color: var(--french-gray);"></MudIconButton>
        <MudIconButton Icon="@Icons.Material.Filled.Favorite" aria-label="add to favorite" Style="color: var(--french-gray);"></MudIconButton>
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>



@code {
    MudTheme MyCustomTheme = new MudTheme()
        {
            Palette = new Palette()
            {
                Background = "#1C1C1E", // Primary purple for the background
                AppbarBackground = "#333333", // Dark background color for the app bar
                TextPrimary = "#ADAAB3", // White color for the text and icons
                TextSecondary = "#71717a",
                Primary = "#723CEAff",
                PrimaryContrastText = "#C99BF8"
                
                
                
             
            },
            Typography = new Typography()
            {
                Default = new Default()
                {
                    FontFamily = new[] { "Jost", "Helvetica", "Arial", "sans-serif" },
                    
                }
            }
        };
}