@inherits LayoutComponentBase

<MudThemeProvider Theme="@MyCustomTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudAppBar Class="d-flex justify-content-center align-items-center" Elevation="0" Style="background-color: #161616">
    <MudText>
        CoupleSwipe
    </MudText>
</MudAppBar>
<MudLayout>
    <MudAppBar Bottom="true" Class="d-flex flex-row justify-content-evenly">
        <MudIconButton Icon="@Icons.Material.Filled.Favorite" aria-label="date-ideas" Style="color: var(--french-gray);" Href="/">
        </MudIconButton>
        <MudIconButton Icon="@Icons.Material.Filled.Person" aria-label="settings" Style="color: var(--french-gray);" Href="/settings">
        </MudIconButton>
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    MudTheme MyCustomTheme = new MudTheme()
        {
            Palette = new Palette()
            {
                Background = "#161616", 
                
                AppbarBackground = "#1D1E20", 
                TextPrimary = "#FFFFFF", // White color for the text and icons
                TextSecondary = "#515151",
            },
            Typography = new Typography()
            {
                Default = new Default()
                {
                    FontFamily = new[] { "Jost", "Helvetica", "Arial", "sans-serif" },
                }
            }
        };
}
