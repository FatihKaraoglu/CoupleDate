@inherits LayoutComponentBase

<MudThemeProvider Theme="@MyCustomTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout Class="d-flex">
    <MudAppBar Class="d-flex justify-content-center align-items-center" Elevation="0" Style="background-color: #161616">
        <MudText>
            CoupleSwipe
        </MudText>
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
    <MudAppBar Bottom="true" Class="d-flex flex-row justify-content-evenly gap-6">
        <AppBarItem Icon="@Icons.Material.Outlined.Person" Href="/" ItemTitle="Profile"/>
        <AppBarItem Icon="@Icons.Material.Outlined.Home" Href="/" ItemTitle="Home"/>
        <AppBarItemButton Icon="@Icons.Material.Outlined.Settings" ItemTitle="Settings" OnClick="OpenDrawerSettings" />
    </MudAppBar>

    <MudDrawer @bind-Open="@_open" Anchor="@Anchor.Bottom" Elevation="1" Variant="@DrawerVariant.Temporary" Height="90%" >
        <MudDrawerHeader Class="d-flex flex-row justify-content-between">
            <MudText Typo="Typo.h6" Style="color: white">Settings</MudText>
            <MudIconButton Class="transition icon-button" Style="color: white" Icon="@Icons.Rounded.Cancel" OnClick="CloseDrawerSettings">

            </MudIconButton>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavLink Icon=@Icons.Material.Outlined.Person Class="border-bottom-settings">Account Information</MudNavLink>
            <MudNavLink Icon=@Icons.Material.Outlined.Payment Class="border-bottom-settings">Payment Methods</MudNavLink>
            <MudNavLink Icon=@Icons.Material.Outlined.Favorite Class="border-bottom-settings">Relationship</MudNavLink>

        </MudNavMenu>
    </MudDrawer>
   
</MudLayout>

@code {
    private bool _open;

    MudTheme MyCustomTheme = new MudTheme()
        {
            Palette = new Palette()
            {
                Background = "#161616",
                AppbarBackground = "#1D1E20",
                DrawerBackground = "#1D1E20",
                TextPrimary = "#FFFFFF", // White color for the text and icons
                TextSecondary = "#515151",
                Primary = "#D42163",
                Error = "#DC143C"
            },
            Typography = new Typography()
            {
                Default = new Default()
                {
                    FontFamily = new[] { "Jost", "Helvetica", "Arial", "sans-serif" },
                }
            }
        };

    private void OpenDrawerSettings()
    {
        _open = true;
    }

    private void CloseDrawerSettings()
    {
        _open = false;
    }
}
